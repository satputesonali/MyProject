<?xml version="1.0" encoding="utf-8"?>
<ScrollView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:fillViewport="true"
  >
  <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:background="#fff">
 
        <!--  Header  Starts-->
        <!--  Header Ends -->
        <!-- Footer Start -->
        
        <!-- Footer Ends -->
 
        <!-- Member Details -->
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:orientation="vertical"
            android:padding="10dip" >

          <!-- Librarian Id -->

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_span="2"
    android:fontFamily="Arial Black"
    android:text="Book Display"
    android:textColor="#063378"
    android:textSize="25sp"
    android:textStyle="bold" />

          <TextView
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Accn_no"
              android:textColor="#372c24" />

          <EditText
              android:id="@+id/accno_upd1"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dip"
              android:layout_marginTop="5dip"
              android:singleLine="true" />

          <!--  Member Type -->

          <TextView
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Title"
              android:textColor="#372c24" />

          <EditText
              android:id="@+id/title1"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dip"
              android:layout_marginTop="5dip"
              android:ems="10"
              android:singleLine="true" >

             
          </EditText>

          <TextView
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Author"
              android:textColor="#372c24" />

          <EditText
              android:id="@+id/author1"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dip"
              android:layout_marginTop="5dip"
              android:ems="10"
              android:singleLine="true" />
          
             <TextView
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:text="Edition"
              android:textColor="#372c24" />

          <EditText
              android:id="@+id/edition1"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dip"
              android:layout_marginTop="5dip"
              android:ems="10"
              android:singleLine="true" />
          
           <TextView
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="Rack No"
               android:textColor="#372c24" />

          <EditText
              android:id="@+id/rackno1"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dip"
              android:layout_marginTop="5dip"
              android:singleLine="true" />
          
           <TextView
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="Self No"
               android:textColor="#372c24" />

          <EditText
              android:id="@+id/selfno1"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dip"
              android:layout_marginTop="5dip"
              android:singleLine="true" />
          
           <TextView
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:text="Position"
               android:textColor="#372c24" />

          <EditText
              android:id="@+id/position1"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="10dip"
              android:layout_marginTop="5dip"
              android:singleLine="true" />

          <!-- Department -->
          <!-- Class -->
          <!-- Add Button -->
          <!-- Clear Button -->

          <Button
              android:id="@+id/btnbookupdate1"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="10dip"              
              android:text="Back to Search" 
              android:drawableTop="@drawable/book1"              
              android:background="@color/white"/>

         
 
        </LinearLayout>
        <!-- Member Form Ends -->
  </RelativeLayout>
</ScrollView>
